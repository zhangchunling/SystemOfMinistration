<!--  内容列表   --><!--调用删除方法  -->
<form id="form2" name="form2" action="<%=basePath %>deleteMailBoxServlet" method="post"/>
<input type="hidden" id="hiddel" name="hiddel" />

<table width="98%" border="0" cellpadding="2" cellspacing="1" bgcolor="#D1DDAA" align="center" style="margin-top:8px">
<tr bgcolor="#E7E7E7">
	<td height="24" colspan="12" background="skin/images/tbg.gif">&nbsp;发件箱&nbsp;</td>
</tr>
<tr align="center" bgcolor="#FAFAF1" height="22">
	<td width="4%">选择</td>
	<td width="6%">序号</td>
	<td width="10%">标题</td>
	<td width="10%">内容</td>
	<td width="10%">收件人</td>
	<td width="8%">时间</td>
	<td width="8%">操作</td>
		</tr>  
		<!--c标签的 循环  -->
				<c:forEach var="mes" items="${list}" varStatus="statu">
				<tr align='center' bgcolor="#FFFFFF" onMouseMove="javascript:this.bgColor='#FCFDEE';" onMouseOut="javascript:this.bgColor='#FFFFFF';" height="22" >
						<td><input name="id" type="checkbox" id="id" value="${mes.id }" class="np"></td>
						<td>${statu.index+1}</td>
						<td>${mes.title }</td>
						<td>${mes.content}</td>
						<td>${mes.adressee}</td>
						<td>${mes.time}</td>
						<td><a href="javascript:if(confirm('您真的忍心删除吗？'))window.location.
						 href='<%=basePath%>deleteMailBoxServlet?id=${mes.id}'">删除</a></td>
				</tr>		
				</c:forEach>
			

<tr bgcolor="#FAFAF1">
<td height="28" colspan="12">
	&nbsp;
	<a href="javascript:onclick=all();" class="coolbg">全选</a>
	<a href="javascript:onclick=reAll();" class="coolbg">反选</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	<a href="javascript:onclick=subForm2();" class="coolbg">&nbsp;删除&nbsp;</a>
	<a href="<%=basePath %>portProductServlet" class="coolbg">&nbsp;导出Excel&nbsp;</a>
	
    	
</td>
</tr>
<tr align="right" bgcolor="#EEF4EA">
	<td height="36" colspan="12" align="center"><!--翻页代码 -->
		<%
    		MailBox  mailBox=(MailBox)request.getAttribute("mailBox");
    		
    		//计算下一页的值
    		int nextPage=1;
    		//如果当前页已经是最后一页则不加值
    		if(mailBox.getCurrentPage()==mailBox.getTotalPage()){
    			nextPage=mailBox.getCurrentPage();
    		}else{
    			nextPage=mailBox.getCurrentPage()+1; //下一页计算的值 
    		}   		
    		//计算上一页的值 
    		int upPage=1;
    		if(mailBox.getCurrentPage()>1)
    			upPage=mailBox.getCurrentPage()-1;
    	 %>
    	<center>
	    	<a href="<%=basePath%>query.servlet?currentPage=1">首页</a>  
	    	<a href="<%=basePath%>query.servlet?currentPage=<%=upPage%>">上一页 </a> 
	    	<a href="<%=basePath%>query.servlet?currentPage=<%=nextPage%>">下一页</a>  
	    	<a href="<%=basePath%>query.servlet?currentPage=<%=mailBox.getTotalPage()%>">尾页</a>
    	</center>
	</td>
</tr>
</table>

